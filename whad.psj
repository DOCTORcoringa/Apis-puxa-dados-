def get_target_and_quantity(action_name):
    type_writer(f"Informe o número do alvo para '{action_name}':", 0.05, False)
    target = input(" ")
    type_writer(f"Informe a quantidade para '{action_name}':", 0.05, False)
    quantity = input(" ")
    return target.strip(), quantity.strip()

def execute_option(key, options):
    if key == 'Q':
        clear_screen()
        type_writer("Saindo... Obrigado por usar!", 0.05)
        sys.exit(0)
    elif key == 'Z':
        clear_screen()
        type_writer("Abrindo WhatsApp do criador...", 0.05)
        os.system('am start -a android.intent.action.VIEW -d "https://wa.me/message/C7VWPEONV6IJL1"')
        type_writer("\nPressione Enter para voltar ao menu.", 0.05)
        input()
    elif key in options:
        clear_screen()
        action = options[key]
        target, quantity = get_target_and_quantity(action)
        type_writer(f"{action} para {target} na quantidade {quantity} iniciado...\n", 0.05)
        progress_bar(4.0)
        success_msgs = [
            f"{action} concluído com sucesso no alvo {target}!",
            f"Operação '{action}' finalizada para {target}.",
            f"Processo '{action}' realizado sem erros para {target}."
        ]
        for msg in success_msgs:
            type_writer(msg, 0.04)
        type_writer("\nPressione Enter para voltar ao menu...")
        input()
    else:
        type_writer("Opção inválida! Tente novamente.", 0.05)
        time.sleep(1)

def main():
    welcome()
    user_name = get_user_name()
    options = print_menu()
    while True:
        clear_screen()
        type_writer(f"Seja bem-vindo, {user_name}!\n", 0.05)
        options = print_menu()
        choice = input(" ").strip().upper()
        execute_option(choice, options)

if __name__ == "__main__":
    main()
